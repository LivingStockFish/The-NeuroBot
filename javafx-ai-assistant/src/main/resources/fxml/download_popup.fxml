<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.genuinecoder.aiassistant.gui.DownloadPopupController"
            prefWidth="350" prefHeight="220">

    <!-- Background Image -->
    <AnchorPane style="-fx-background-image: url('/icon/background.png');
                        -fx-background-size: cover;
                        -fx-background-repeat: no-repeat;
                        -fx-background-position: center;">

        <VBox alignment="CENTER" spacing="12" prefWidth="350" prefHeight="220">

            <!-- Main status title -->
            <Label fx:id="titleLabel"
                   text="The model is downloading"
                   style="-fx-font-size: 20px; -fx-text-fill: gold; -fx-font-weight: bold;" />

            <ProgressIndicator fx:id="loadingCircle"
                               prefWidth="45" prefHeight="45" />

            <Label text="Please wait..."
                   style="-fx-font-size: 16px; -fx-text-fill: white; -fx-font-weight: bold;" />


            <!-- SUCCESS message (hidden by default) -->
            <Label fx:id="successLabel"
                   text="Download completed!"
                   visible="false"
                   style="-fx-font-size: 18px; -fx-text-fill: #00ff7f; -fx-font-weight: bold;" />

            <!-- ERROR message (hidden by default) -->
            <Label fx:id="errorLabel"
                   text="Error: Not enough storage or memory!"
                   wrapText="true"
                   maxWidth="300"
                   visible="false"
                   style="-fx-font-size: 16px; -fx-text-fill: #ff4c4c; -fx-font-weight: bold;" />

        </VBox>

    </AnchorPane>

</AnchorPane>
