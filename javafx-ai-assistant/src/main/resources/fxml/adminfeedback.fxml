<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.image.ImageView?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.genuinecoder.aiassistant.gui.AdminFeedbackController"
            stylesheets="@../css/adminfeedback.css"
            styleClass="admin-feedback-background">

    <!-- Top Bar -->
    <top>
        <HBox alignment="CENTER" spacing="20" styleClass="feedback-topbar">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <ImageView fx:id="backButton"
                      fitHeight="40" fitWidth="40"
                      pickOnBounds="true" preserveRatio="true"
                      onMouseClicked="#handleBack"
                      styleClass="back-btn"/>
            <Label text="User Feedbacks" styleClass="feedback-title"/>
        </HBox>
    </top>

    <!-- Center Content -->
    <center>
        <ScrollPane fitToWidth="true" style="-fx-background: transparent; -fx-background-color: transparent;">
            <VBox fx:id="feedbackContainer"
                  spacing="20"
                  alignment="TOP_CENTER"
                  style="-fx-background-color: transparent;">
                <padding>
                    <Insets top="20" right="30" bottom="20" left="30"/>
                </padding>
            </VBox>
        </ScrollPane>
    </center>

</BorderPane>
